<%- include('partials/header') -%>


<section class="login-page">
  <div class="container h-200">
    <div class="row justify-content-md-center h-100">
      <div class="card-wrapper">
        <div class="card fat">
          <div class="card-body">
            <h4 class="card-title">Document Verification</h4>
            <form method="POST" action="/doc_verify" class="my-login-validation" novalidate="" enctype="multipart/form-data">
              <input type="hidden" value="<%= csrfToken %>" name="_csrf">
              <div class="form-group">
                <label for="indPhoto">Upload your Photo</label>
                <input type="file" class="form-control-file" name="indPhoto" id="indPhoto" accept="image/x-png,image/gif,image/jpeg">
              </div>

              <div class="form-group">
                <label for="indIdentityProof">Upload Identity Proof</label>
                <input type="file" class="form-control-file" name="indIdentityProof" id="indIdentityProof" accept="application/pdf,application/vnd.ms-excel">
              </div>

              <div class="form-group">
                <label for="indAddressProof">Upload Address Proof</label>
                <input type="file" class="form-control-file" name="indAddressProof" id="indAddressProof" accept="application/pdf,application/vnd.ms-excel">
              </div>


              <div class="form-group m-0">
                <button type="submit" class="btn btn-primary btn-block" href="/otpverify">
                  SUBMIT FOR VERIFICATION
                </button>
              </div>
              <div class="mt-4 text-center">
                Don't have an account? <a href="/signup">Create One</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</div>


</section>





<%- include('partials/footer') -%>
