<%- include('partials/header') -%>


<section class="login-page">
  <div class="container h-200">
    <div class="row justify-content-md-center h-100">
      <div class="card-wrapper">
        <div class="card fat">
          <div class="card-body">
            <h4 class="card-title">OTP Verification</h4>
            <form method="POST" action="/otpverify" class="my-login-validation" novalidate="">
              <input type="hidden" value="<%= csrfToken %>" name="_csrf">
              <div class="form-group">
                <label for="otp">Enter OTP Code</label>
                <input id="otp" type="otp" class="form-control" name="otp" value="" required autofocus>
                <div class="invalid-feedback">
                  Email is invalid
                </div>
                <div class="form-text text-muted">
                  OTP Code has been sent to your Email Address
                </div>
              </div>

              <div class="form-group m-0">
                <button type="submit" class="btn btn-primary btn-block" >
                  Register
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</div>


</section>





<%- include('partials/footer') -%>
