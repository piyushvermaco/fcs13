<%- include('../layout') -%>
<body>

  <%- include('patientSideBar') -%>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->

    <%- include('../../partials/navbar') -%>
    <!-- Header -->

    <%- include('../../partials/headerdashboard') -%>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">

        <div class="col-xl-12 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Share Documents</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form method="POST" action="/updatePatientDocument" method="POST">
                  <div class="form-group">
                    <label for="documentName">Enter Document Name</label>
                    <input id="documentName" type="text" class="form-control" name="documentName" value="" required autofocus>
                  </div>

                  <div class="form-group">
                    <label for="toemail">Enter Recpient Email</label>
                    <input id="toemail" type="text" class="form-control" name="toemail" value="" required autofocus>
                  </div>

                  <div class="form-group m-0">
                    <button type="submit" class="btn btn-primary btn-block" href="/otpverify">
                      Share
                    </button>
                  </div>
                </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <%- include('../../partials/footerdashboard') -%>

    </div>
  </div>
  <!-- Include scripts -->
  <%- include('../../partials/scripts') -%>
</body>

</html>
