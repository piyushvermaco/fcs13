<%- include('../layout') -%>

<body>

  <%- include('patientSideBar') -%>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->

    <%- include('../../partials/navbar') -%>
    <!-- Header -->

    <%- include('../../partials/headerdashboard') -%>
    <!-- Page content -->
    <div class="container-fluid mt--7">

      <!-- Approve Users Table -->
      <div class="row mt-5">
        <div class="col">
          <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
              <h3 class="text-white mb-0">Delete Your Medical Records</h3>
            </div>
            <div class="table-responsive">
              <table class="table align-items-center table-dark table-flush">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">File Name</th>
                    <th scope="col">Remove User</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(var i = 0;i<documents.length;i++){ %>
                      <tr>
                        <th scope="row">
                            <%= documents[i].filename %>
                        </th>
                        <td>
                          <%= documents[i].filepath %>
                        </td>
                        <td>
                          <a href="/delete/<%= documents[i].filename%>" class="btn btn-sm btn-primary">Remove</a>
                        </td>
                      </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <%- include('../../partials/footerdashboard') -%>

    </div>
  </div>
  <!-- Include scripts -->
  <%- include('../../partials/scripts') -%>
</body>

</html>
