<%- include('partials/header') -%>


      <section class="login-page">
        <div class="container h-200">
          <div class="row justify-content-md-center h-200">
            <div class="signupcard-wrapper">
              <div class="card fat">
                <div class="card-body">
                  <h4 class="card-title">ORGANIZATION REGISTER</h4>
                  <form method="POST" action="/orgSignup" class="my-login-validation" novalidate="">
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                    <div class="form-group row">
                      <div class="col">
                        <label for="organizationName" class="form-label">Organization Name</label>
                        <input name="orgName" type="text" class="form-control" placeholder="organizationName" aria-label="First name">
                      </div>

                    </div>
                    <div class="form-group">
                      <label for="orgType">Organization Type</label>
                      <select name="orgType" class="form-control" id="orgType">
                          <option value="Hospital">Hospital</option>
                          <option value="Pharmacy">Pharmacy</option>
                          <option value="Insurance">Insurance Firm</option>
                      </select>
                    </div>

                    <div class="form-group row">
                      <div class="col">
                        <label for="phone" class="form-label">Phone No.</label>
                        <input name="phoneNumber" type="number" class="form-control" placeholder="Phone NO" aria-label="Phone NO">
                      </div>
                    </div>



                    <div class="form-group row">
                      <div class="col-12">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input name="address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-md-6">
                        <label for="inputZip" class="form-label">Zip Code</label>
                        <input name="zipCode" type="text" class="form-control" id="inputZip">
                      </div>
                      <div class="col-md-6">
                        <label for="inputState" class="form-label">State</label>
                        <input name="state" type="text" class="form-control" id="inputState">
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-md-6">
                        <label for="inputCity" class="form-label">City</label>
                        <input name="city" type="text" class="form-control" id="inputCity">
                      </div>
                      <div class="col-md-6">
                        <label for="inputCountry" class="form-label">Country</label>
                        <input name="country" type="text" class="form-control" id="inputCountry">
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="email">E-Mail Address</label>
                      <input id="email" type="email" class="form-control" name="email" value="" required autofocus>
                      <div class="invalid-feedback">
                        Email is invalid
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="password">Password</label>
                      <input id="password" type="password" class="form-control" name="password" required data-eye>
                      <div class="invalid-feedback">
                        Password is required
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="confirm_password">Confirm Password</label>
                      <input id="confirm_password" type="password" class="form-control" name="confirm_password" required data-eye>
                      <div class="invalid-feedback">
                        Password is required
                      </div>
                    </div>

                    <div class="form-group m-0">
                      <button type="submit" class="btn btn-primary btn-block" href="/otpverify">
                        Continue
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    </div>


  </section>

  <%- include('partials/footer') -%>
